<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".Fragment.DetailsFragment">

    <!-- Top Bar -->
    <TextView
        android:id="@+id/floorTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1st FLOOR"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Parking Layout -->
    <FrameLayout
        android:id="@+id/parkingLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/slotInfoCard"
        app:layout_constraintTop_toBottomOf="@+id/floorTitleText">

        <!-- Parking Outline -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/parking_outline" />

        <!-- Vertical lines -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="40dp"
            android:background="@color/black" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="40dp"
            android:background="@color/black" />

        <!-- Middle lane -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:background="@color/black" />

        <!-- Parking Slots -->
        <LinearLayout
            android:id="@+id/leftColumnSlots"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="50dp"
            android:layout_marginVertical="36dp"
            android:orientation="vertical">

            <!-- Slot 1 -->
            <FrameLayout
                android:id="@+id/slotA1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="4dp">

                <View
                    android:id="@+id/slotA1Background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/green_dashed_border" />

                <LinearLayout
                    android:id="@+id/carDetailsA1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/plateNumberA1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABC 1234"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/phoneNumberA1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0912-345-6789"
                        android:textColor="@color/black"
                        android:textSize="8sp" />
                </LinearLayout>
            </FrameLayout>

            <!-- Slot 2 -->
            <FrameLayout
                android:id="@+id/slotA2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="4dp">

                <View
                    android:id="@+id/slotA2Background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/red_dashed_border_filled" />

                <LinearLayout
                    android:id="@+id/carDetailsA2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/plateNumberA2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XYZ 789"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/phoneNumberA2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0923-456-7890"
                        android:textColor="@color/black"
                        android:textSize="8sp" />
                </LinearLayout>
            </FrameLayout>

            <!-- Slot 3 -->
            <FrameLayout
                android:id="@+id/slotA3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="4dp">

                <View
                    android:id="@+id/slotA3Background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/yellow_dashed_border" />

                <LinearLayout
                    android:id="@+id/carDetailsA3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/plateNumberA3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEF 456"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/phoneNumberA3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0934-567-8901"
                        android:textColor="@color/black"
                        android:textSize="8sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <!-- Entrance/Exit Icons -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp" />
    </FrameLayout>

    <!-- Slot Information Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/slotInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/slotNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slot A10"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/slotLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st Floor Parking"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slotNumberText" />

            <TextView
                android:id="@+id/slotStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="@color/green"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slotLocationText" />

            <TextView
                android:id="@+id/dateTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Time and Date"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slotStatusText" />

            <EditText
                android:id="@+id/dateTimeInput"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_blue_button"
                android:hint="dd/mm/yyyy | HH:MM"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:clickable="true"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTimeLabel" />

            <TextView
                android:id="@+id/totalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/dateTimeInput"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dateTimeInput" />

            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱XX"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/totalLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/totalLabel"
                app:layout_constraintTop_toTopOf="@+id/totalLabel" />

            <Button
                android:id="@+id/reserveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_blue_button"
                android:paddingHorizontal="24dp"
                android:text="Reserve Now"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTimeInput" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>